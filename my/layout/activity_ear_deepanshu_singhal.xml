<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="5"

    tools:context="com.example.vikram.my.Activity_Eye_Manav"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/deepanshu_singhal"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        />
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"

        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ABOUT"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031">

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Dr. H.K Bandil is a Vitreoretina Specialist, Cataract and Refractive Surgeon and Ophthalmologist/ Eye Surgeon in Gwalior City, Gwalior and has an  experience"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000"
            >

        </TextView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/card_view2"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ADDRESS"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031" >

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Netra Upchaar Clinic
#23, Shabd Pratap Ashram, Landmark: Near Urvai Gate, Gwalior

"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000">

        </TextView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/card_view2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_weight="1">

                <ImageView android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@mipmap/clock"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>


                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="MON-SAT"
                    android:layout_weight=".4"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="#000000" />


                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="6:00PM-8:30PM"
                    android:layout_weight=".8"
                    android:textSize="15dp"
                    android:textColor="#000000"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_marginLeft="36dp">
                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="30dp"
                    android:src="@mipmap/rupee"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    />



                <TextView
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="   FEE
                    
                
"
                    android:textColor="#84c431"
                    android:textSize="16dp"
                    android:layout_weight=".8"
                    android:layout_marginTop="15dp"
                    >

                </TextView>
                <TextView
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text=" INR 150 "
                    android:textColor="#84c431"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    >

                </TextView>

            </LinearLayout>
            <Button
                android:layout_height="wrap_content"
                android:id="@+id/manav_button"
                android:layout_width="0dp"
                android:text="BOOK "
                android:textSize="20dp"
                android:layout_weight=".9"
                android:layout_marginTop="30dp"


                android:background="#72c964"
                android:onClick="eye_manav"

                />


        </LinearLayout>







    </android.support.v7.widget.CardView>

</LinearLayout>
