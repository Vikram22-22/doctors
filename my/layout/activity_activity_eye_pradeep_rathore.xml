<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="5"

    tools:context="com.example.vikram.my.Activity_Eye_Manav"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:src="@drawable/pradeepsir"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        />
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"

        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ABOUT"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031">

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Dr. Pradeep Singh Rathore is an Ophthalmologist/ Eye Surgeon in Gwalior City, Gwalior and has an experience of 11 years in this field. Dr. Pradeep Singh Rathore"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000"
            >

        </TextView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/card_view2"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ADDRESS"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031" >

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Sunayna Eye Care
1st Floor, Madhuban Colony, Thatipur, Landmark: Mahipat Plaza, Gwalior

"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000">

        </TextView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/card_view2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight=".9"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"

                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="CALL NOW"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/call_large"
                    android:layout_weight="1"
                    android:onClick="pradeeprathorecall"
                    />

            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight=".8">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight=".9"
                    android:src="@mipmap/rupee"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR 200"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#80d751"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1.4"
                android:weightSum="2"

                >
                <TextView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="APPOINTMENT"
                    android:textSize="18dp"
                    android:gravity=""
                    android:layout_below="@id/card_view2"
                    android:layout_weight="1.2"




                    android:textColor="#000000">

                </TextView>
                <Button
                    android:layout_height="0dp"
                    android:id="@+id/manav_button"
                    android:layout_width="match_parent"
                    android:text="BOOK "
                    android:textSize="20dp"


                    android:background="#72c964"
                    android:onClick="eye_manav"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".8">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
