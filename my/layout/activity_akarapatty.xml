<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="5"

    tools:context="com.example.vikram.my.Activity_Eye_Manav"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:src="@drawable/akarpatty"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        />
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"

        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ABOUT"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031">

        </TextView>
        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Dr. Cherian has performed more than 3000 Coronary procedures including coronary angiographies and angioplasties, renal angioplasties, peripheral angioplasties, TACE,coiling procedures, IVC filter insertion and pace maker implantation till now"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000"
           />
</ScrollView>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/card_view2"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ADDRESS"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3c8031" >

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Sindhi Colony, Sikandar Kampoo, Lashkar, Gwalior - 474001, Mascot Hospital
Hours Of Operation:
Today :10:00 am - 08:00 pm  "
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:textColor="#000000">

        </TextView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/card_view2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:weightSum="2"

                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"

                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="CALL NOW"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/call_large"
                    android:layout_weight=".8"
                    android:onClick="akarpattycall"
                    android:background="#72c964"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    />

            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"

                android:gravity="center"
                android:layout_weight=".6">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight=".9"
                    android:src="@mipmap/rupee"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR 200"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#80d751"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1.4"
                android:weightSum="2"

                >
                <TextView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="APPOINTMENT"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_below="@id/card_view2"
                    android:layout_weight="1.2"




                    android:textColor="#000000">

                </TextView>
                <Button
                    android:layout_height="0dp"
                    android:id="@+id/akarpatty_button"
                    android:layout_width="match_parent"
                    android:text="BOOK "
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"


                    android:background="#72c964"
                    android:onClick="eye_manav"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".8"
                    android:layout_marginBottom="2dp">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
